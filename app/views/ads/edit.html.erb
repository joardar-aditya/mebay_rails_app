
<h1>Edit <%= @ad.name %></h1>


<%= form_for @ad, url: {action: "update"} do |f| %>
        
    <!-- form_for @object, html: { multipart: true }, do |f| -->
    <!-- form_for @object, html: { class: "classname" }, do |f| -->
    <p>Name</p> <br/>   
    <%= f.text_field :name %> <br/>
    <p>Description</p><br/>
    <%= f.text_area :desc %><br/>
    <p>Price</p><br/>
    <%= f.text_field :price %><br/>
    <p>Seller Id</p><br/>
    <%= f.text_field :seller_id %><br/>
    <p>Email</p><br/>
    <%= f.text_field :email %><br/>
    <p>Image Url:</p><br/>
    <%= f.text_field :img_url %><br/>
    <%= f.submit "Update" %>

    <br/>    
<% end %>

<a href="/ads/<%= @ad.id %>">Back</a>